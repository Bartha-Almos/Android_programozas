<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="viewModel.RecipeDetailFragment">


    <TextView
            android:text="Title"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recipe_item_title_view"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.050000012" app:layout_constraintHorizontal_bias="0.04"/>
    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" android:id="@+id/recipe_item_description_view"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintTop_toBottomOf="@+id/recipe_item_title_view"/>
    <ImageView
            android:background="@android:color/holo_green_light"
            android:layout_width="330dp"
            android:layout_height="190dp" android:id="@+id/recipe_image_view"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.012"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/recipe_item_description_view"
            app:layout_constraintHorizontal_bias="0.493"/>
    <TextView
            android:text="Ratings: 9.2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recipe_Ratings_View"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/recipe_image_view"/>
    <TextView
            android:text="Total Time: 30 mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/total_time_view"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.104"
            app:layout_constraintHorizontal_bias="0.045"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recipe_Ratings_View"/>
    <TextView
            android:text="Instructions"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" android:id="@+id/instructions_view"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.13"
            app:layout_constraintHorizontal_bias="0.038" app:layout_constraintTop_toBottomOf="@+id/total_time_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>